@model IEnumerable<HRWebApplication.Models.PayrollViewModels>

@{
    ViewBag.Title = "List of Payroll";
}

<form id="myForm" method="post">
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Payrolls</h3>
                </div>
                <div class="pull-right">

                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Payroll <small>List of all Payroll Information</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.No)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Timestamp)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Employee)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Amount)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Remaining)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.HasPayment)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Status)
                                            </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.No)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Timestamp)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Employee)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Amount)
                                                </td>
                                                <td>
                                                    @{ 
                                                        HRWebApplication.Common.Master m = new HRWebApplication.Common.Master();
                                                        decimal remain = item.Amount - m.GetTotalPayment(item.Id);
                                                    }
                                                    @remain.ToString("#,##0.00")
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.HasPayment)
                                                </td>
                                                <td>
                                                    @if (remain > 0)
                                                    {
                                                        if (item.HasPayment)
                                                        {
                                                            <label class="btn btn-danger btn-xs" disabled>Due Payment</label>
                                                        }
                                                        else
                                                        {
                                                            <label class="btn btn-default btn-xs" disabled>No Payment</label>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <label class="btn btn-success btn-xs" disabled>Completed Payment</label>
                                                    }
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-info btn-xs" onclick="details('@item.Employee', '@item.Id', '@item.No')"><i class="fa fa-info-circle"></i> Info Details</button>
                                                    @if (remain > 0)
                                                    {
                                                        <a href="@Url.Action("Payment", "Report", new { id = item.Id })" class="btn btn-warning btn-xs"><i class="fa fa-dollar"></i> Payment</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("Payment", "Report", new { id = item.Id })" class="btn btn-warning btn-xs" disabled><i class="fa fa-dollar"></i> Payment</a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    function details(name, id, no) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetDetails", "Report")',
            data: {
                Id: id
            },
            success: function (data) {
                var dialog = bootbox.alert({
                    title: 'Payroll List No. ' + no + ' ( ' + name + ' )',
                    message: data.content,
                    //size: 'large',
                    backdrop: true
                });
            }, //end success
            error: function (result) {
                bootbox.alert("Error " + result);
            } //end error
        }); //end ajax
    }

    $(document).ready(function () {
        var table = $('#datatable').DataTable({
            'order': [[0, 'desc']]
        });
    });
</script>