@model IEnumerable<HRWebApplication.Models.BankAccountViewModels>

@{
    ViewBag.Title = "Index Bank Account";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bank Account</h3>
            </div>
            <div class="pull-right">
                <a href="@Url.Action("Create", "BankAccount")" class="btn btn-success">Create New</a>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Bank Account <small>List of all Bank Account</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BankName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AccountNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Owner)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Internal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Active)
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BankName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AccountNumber)
                                        </td>
                                        <td>
                                            @{ 
                                                string owner = "";
                                                if (item.Owner == "1") { owner = "Client"; }
                                                else if (item.Owner == "1") { owner = "Employee"; }
                                                else { owner = "Internal"; }
                                            }
                                            @owner
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Internal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>