@model IEnumerable<HRWebApplication.Models.WorkshiftViewModels>

@{
    ViewBag.Title = "List of Workshift";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Workshift</h3>
            </div>
            <div class="pull-right">
                <a href="@Url.Action("Create", "Workshift")" class="btn btn-success">Create New</a>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Index <small>List of all Workshift</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Client)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.TemplateName)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.Category)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DayOfWeek)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Start)
                                    </th>
                                    <th>
                                        End
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Active)
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Client)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Employee)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.TemplateName)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DayOfWeek)
                                        </td>
                                        <td>
                                            @{ string start = item.Start.Substring(0, 5);}
                                            @start
                                        </td>
                                        <td>
                                            @{ string end = DateTime.Parse(item.Start.Substring(0, 5)).AddMinutes(item.DurationMinutes).ToString("HH:mm"); }
                                            @end
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>